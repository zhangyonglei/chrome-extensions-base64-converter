{
  "manifest_version": 3,
  "name": "Base64 Converter",
  "version": "1.0",
  "description": "Encode/Decode selected text to/from Base64",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [{
    "resources": ["popup.html"],
    "matches": ["<all_urls>"]
    },
    {
      "resources": ["popup.css"],
      "matches": ["<all_urls>"]
    }],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
